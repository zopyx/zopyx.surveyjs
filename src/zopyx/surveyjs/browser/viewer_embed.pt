<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Survey</title>

  <!-- SurveyJS Core CSS -->
  <link href="https://unpkg.com/survey-core/survey-core.min.css"
        rel="stylesheet"
        type="text/css" />

  <!-- Minimal embed-specific styles -->
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      height: 100%;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }

    body {
      padding: 20px;
      background: #fff;
    }

    #surveyContainer {
      width: 100%;
      max-width: 100%;
    }

    /* Ensure survey fits in iframe */
    .sv-root-modern {
      max-width: 100% !important;
    }
  </style>

  <!-- JavaScript variables -->
  <script type="text/javascript"
          tal:condition="view/embedding_allowed"
          tal:content="string: ACTUAL_URL='${context/absolute_url}'">
  </script>
  <script type="text/javascript"
          tal:condition="view/embedding_allowed"
          tal:content="string: CSRF_TOKEN='${context/@@authenticator/token}'">
  </script>

  <!-- SurveyJS Libraries -->
  <script src="https://unpkg.com/survey-core/survey.core.min.js"
          type="text/javascript"
          tal:condition="view/embedding_allowed"></script>
  <script src="https://unpkg.com/survey-js-ui/survey-js-ui.min.js"
          type="text/javascript"
          tal:condition="view/embedding_allowed"></script>
  <script src="https://unpkg.com/survey-core/themes/index.min.js"
          type="text/javascript"
          tal:condition="view/embedding_allowed"></script>
</head>
<body>
  <div id="surveyContainer" tal:condition="view/embedding_allowed"></div>

  <!-- Error message when embedding is not allowed -->
  <div tal:condition="not: view/embedding_allowed"
       style="display: flex; align-items: center; justify-content: center; height: 100vh; text-align: center; color: #d32f2f; font-size: 18px; padding: 20px;">
    <div>
      <div style="font-size: 48px; margin-bottom: 20px;">ðŸ”’</div>
      <strong>Embedding Not Allowed</strong>
      <p style="margin-top: 10px; color: #666; font-size: 14px;">
        This survey is not configured to be embedded. Please contact the survey administrator.
      </p>
    </div>
  </div>

  <!-- Survey Logic -->
  <script type="text/javascript" tal:condition="view/embedding_allowed">
    document.addEventListener("DOMContentLoaded", function () {
      const url = ACTUAL_URL + "/get-form-json";

      // Load the survey JSON configuration
      fetch(url, {
        credentials: 'same-origin'
      })
        .then((response) => response.json())
        .then((result) => {
          // Create the survey from the loaded JSON
          console.log(result);
          const survey = new Survey.Model(result);


          // Set up the onComplete handler to save results
          survey.onComplete.add(function (sender) {
            // Save the survey results
            const formData = new FormData();
            formData.append("pollResult", JSON.stringify(sender.data));
            formData.append("_authenticator", CSRF_TOKEN);

            fetch(ACTUAL_URL + "/save-poll", {
              method: "POST",
              body: formData,
              credentials: 'same-origin'
            })
              .then((response) => {
                if (!response.ok) {
                  throw new Error("Save failed");
                }
              })
              .catch((error) => {
                alert("Failed to save survey results. Please try again.");
                console.error(error);
              });
          });

          // Render the survey
          survey.render(document.getElementById("surveyContainer"));

          // Setup auto-resize support for iframe embedding
          setupAutoResize();
        })
        .catch((error) => {
          console.error("Error loading survey:", error);
          document.getElementById("surveyContainer").innerHTML =
            '<div style="color: #d32f2f; padding: 20px; text-align: center;">' +
            '<strong>Error:</strong> Unable to load survey. Please try refreshing the page.' +
            '</div>';
        });
    });

    /**
     * Setup auto-resize communication with parent window
     */
    function setupAutoResize() {
      // Only run if inside an iframe
      if (window.self === window.top) {
        return;
      }

      // Function to send height to parent
      function sendHeight() {
        try {
          const height = document.documentElement.scrollHeight;
          window.parent.postMessage({
            type: 'surveyjs-resize',
            height: height
          }, '*');
        } catch (e) {
          console.error('Error sending height to parent:', e);
        }
      }

      // Send height initially and on resize
      sendHeight();

      // Listen for window resize
      window.addEventListener('resize', sendHeight);

      // Use ResizeObserver if available for more accurate height tracking
      if (typeof ResizeObserver !== 'undefined') {
        const resizeObserver = new ResizeObserver(sendHeight);
        resizeObserver.observe(document.body);
      }

      // Also send height periodically as fallback
      setInterval(sendHeight, 500);

      // Listen for height request from parent
      window.addEventListener('message', function(event) {
        if (event.data && event.data.type === 'surveyjs-get-height') {
          sendHeight();
        }
      });
    }
  </script>
</body>
</html>
