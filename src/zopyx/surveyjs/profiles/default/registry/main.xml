<?xml version="1.0"?>
<registry
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="zopyx.surveyjs">

<!-- -*- extra stuff goes here -*- -->

  <!-- Add Survey to types displayed in navigation -->
  <record name="plone.displayed_types" interface="Products.CMFPlone.interfaces.controlpanel.INavigationSchema" field="displayed_types">
    <value purge="false">
      <element>Survey</element>
    </value>
  </record>

  <!-- Forms Settings for AI-powered form generation -->
  <record name="zopyx.surveyjs.forms.ai_model"
          interface="zopyx.surveyjs.interfaces.IFormsSettings"
          field="ai_model">
    <value></value>
  </record>

  <record name="zopyx.surveyjs.forms.ai_api_key"
          interface="zopyx.surveyjs.interfaces.IFormsSettings"
          field="ai_api_key">
    <value></value>
  </record>

</registry>
